    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and observe all namespaces",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go"
        },
        {
            "name": "Launch and observe selected namespaces",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "OBSERVE_NAMESPACES": "namespaced,namespaced-different"      // comma separated list of namespaces
            }
        }
    ]
}